<Window x:Class="QR_Code_WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QR_Code_WPF"
        mc:Ignorable="d"
        Title="QR-Code" Height="650" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="100*"/>
            <RowDefinition Height="450*"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="2">
            <Image x:Name="qrCodeImageElement" HorizontalAlignment="Left" Height="450"  VerticalAlignment="Top" Width="800"/>
        </Grid>
        <Grid Grid.Row="1">
            <Button Content="Создать QR-код" HorizontalAlignment="Center" VerticalAlignment="Center" Height="59" Width="248" Click="GenerateQRCode_Click"/>
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350*"/>
                <ColumnDefinition Width="450*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50*"/>
                <RowDefinition Height="50*"/>
            </Grid.RowDefinitions>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Введите текст для подписи:" FontSize="20" VerticalAlignment="Center" Height="49" Width="350"/>
            <TextBlock HorizontalAlignment="Center" TextWrapping="Wrap" Text="Публичный ключ для верификации:" FontSize="20" VerticalAlignment="Center" Height="49" Width="350" Grid.Row="1"/>
            <TextBox Grid.Column="1" x:Name="inputTextBox" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="440" Height="48"/>
            <TextBox Grid.Column="1" x:Name="publicKeyTextBox" Grid.Row="1" HorizontalAlignment="Center" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="440" Height="48"/>

        </Grid>









